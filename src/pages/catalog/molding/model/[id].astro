---
import data from "../../../../data/molding.json";

export async function getStaticPaths() {
    // Перетворюємо об'єкт JSON у масив [ключ, значення]
    return Object.entries(data).map(([key, value]) => {
        return {
            params: { id: key },
            props: { model: value },
        };
    });
}

const { model } = Astro.props;
---

<html lang="uk">
    <head>
        <meta charset="utf-8" />
        <title>{model.model_name} — Деталі моделі</title>
    </head>
    <body class="bg-gray-50 p-4 md:p-10">
        <a href="/catalog" class="text-blue-600 hover:underline"
            >← Назад до каталогу</a
        >

        <div class="mt-6 bg-white p-6 rounded-xl shadow-lg">
            <div class="flex flex-col md:flex-row gap-10">
                <div class="md:w-1/2">
                    <img
                        src={model.group_image}
                        alt={model.model_name}
                        class="rounded-lg w-full shadow-sm"
                    />
                </div>

                <div class="md:w-1/2">
                    <h1 class="text-4xl font-black text-gray-900">
                        {model.model_name}
                    </h1>
                    <div class="mt-4 space-y-2 text-lg text-gray-700">
                        <p>
                            <strong>Категорії:</strong>
                            {model.category.join(", ")}
                        </p>
                        <p><strong>Ширина:</strong> {model.width} мм</p>
                        <p><strong>Висота:</strong> {model.height} мм</p>
                        <p class="text-2xl text-green-700 font-bold">
                            Ціна: {model.price} грн
                        </p>
                    </div>
                </div>
            </div>

            <hr class="my-10" />

            <h2 class="text-2xl font-bold mb-6">
                Доступні кольори (артикули):
            </h2>
            <div
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
            >
                {
                    model.variants.map((variant) => (
                        <div class="group cursor-pointer border rounded-lg p-2 hover:shadow-md transition">
                            <img
                                src={variant.thumb}
                                alt={variant.id}
                                class="w-full h-32 object-contain bg-gray-50 rounded"
                                onclick={`alert('Тут буде відкриватися велике фото: ${variant.main_img}')`}
                            />
                            <p class="text-center mt-2 text-sm font-medium text-gray-600 group-hover:text-blue-600">
                                {variant.id.split("-").pop()}{" "}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </body>
</html>
