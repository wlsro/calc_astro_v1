<script>
    const priceRange = document.getElementById(
        "priceRange",
    ) as HTMLInputElement;
    const priceValue = document.getElementById("priceValue");
    const widthCheckboxes = document.querySelectorAll('input[name="width"]');
    const categoryCheckboxes = document.querySelectorAll(
        'input[name="category"]',
    );
    const gridItems = document.querySelectorAll(".molding-item");
    const resultsCount = document.getElementById("resultsCount");
    const noResults = document.getElementById("noResults");
    const resetBtn = document.getElementById("resetFilters");
    const filterToggle = document.getElementById("filterToggle");
    const filterContent = document.getElementById("filterContent");
    const filterChevron = document.getElementById("filterChevron");

    // Toggle Filters on Mobile
    filterToggle?.addEventListener("click", () => {
        filterContent?.classList.toggle("hidden");
        filterChevron?.classList.toggle("rotate-180");
    });

    function filterItems() {
        const maxPrice = parseInt(priceRange.value);
        if (priceValue) priceValue.textContent = maxPrice.toString();

        const selectedWidths = Array.from(widthCheckboxes)
            .filter((cb: any) => cb.checked)
            .map((cb: any) => {
                const [min, max] = cb.value.split("-").map(Number);
                return { min, max };
            });

        const selectedCategories = Array.from(categoryCheckboxes)
            .filter((cb: any) => cb.checked)
            .map((cb: any) => cb.value);

        let visibleCount = 0;

        gridItems.forEach((item: any) => {
            const price = parseInt(item.dataset.price);
            const width = parseInt(item.dataset.width);
            const categories = JSON.parse(item.dataset.categories);

            // Filter by Price (Max limit)
            const priceMatch = price <= maxPrice;

            // Filter by Width
            let widthMatch = true;
            if (selectedWidths.length > 0) {
                widthMatch = selectedWidths.some(
                    (range) => width >= range.min && width <= range.max,
                );
            }

            // Filter by Category
            let categoryMatch = true;
            if (selectedCategories.length > 0) {
                categoryMatch = selectedCategories.some((cat) =>
                    categories.includes(cat),
                );
            }

            if (priceMatch && widthMatch && categoryMatch) {
                item.style.display = "block";
                visibleCount++;
            } else {
                item.style.display = "none";
            }
        });

        if (resultsCount) resultsCount.textContent = visibleCount.toString();

        if (noResults) {
            if (visibleCount === 0) {
                noResults.classList.remove("hidden");
            } else {
                noResults.classList.add("hidden");
            }
        }
    }

    // Attach listeners
    priceRange?.addEventListener("input", filterItems);
    widthCheckboxes.forEach((cb) => cb.addEventListener("change", filterItems));
    categoryCheckboxes.forEach((cb) =>
        cb.addEventListener("change", filterItems),
    );

    // Reset logic
    resetBtn?.addEventListener("click", () => {
        priceRange.value = priceRange.max;
        if (priceValue) priceValue.textContent = priceRange.max;

        widthCheckboxes.forEach((cb: any) => (cb.checked = false));
        categoryCheckboxes.forEach((cb: any) => (cb.checked = false));

        filterItems();
    });

    // Initial run not needed if server renders all visible, but good for sync state
</script>

