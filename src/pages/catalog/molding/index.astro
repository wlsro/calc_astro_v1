<script>
    const priceRange = document.getElementById(
        "priceRange",
    ) as HTMLInputElement;
    const priceValue = document.getElementById("priceValue");
    const widthCheckboxes = document.querySelectorAll('input[name="width"]');
    const categoryCheckboxes = document.querySelectorAll(
        'input[name="category"]',
    );
    const gridItems = document.querySelectorAll(".molding-item");
    const resultsCount = document.getElementById("resultsCount");
    const noResults = document.getElementById("noResults");
    const resetBtn = document.getElementById("resetFilters");
    const filterToggle = document.getElementById("filterToggle");
    const filterContent = document.getElementById("filterContent");
    const filterBadge = document.getElementById("filterBadge");
    const closeFilters = document.getElementById("closeFilters");
    const sortSelects = document.querySelectorAll(".sort-select");

    // State
    let currentSort = { field: "width", direction: "desc" };

    // Toggle Filters on Mobile
    function toggleFilters() {
        if (!filterContent) return;

        // Toggle State Classes
        filterContent.classList.toggle("invisible");
        filterContent.classList.toggle("opacity-0");
        filterContent.classList.toggle("-translate-y-4");

        filterContent.classList.toggle("visible");
        filterContent.classList.toggle("opacity-100");
        filterContent.classList.toggle("translate-y-0");

        const isOpen = filterContent.classList.contains("visible");

        if (isOpen) {
            document.body.classList.add("overflow-hidden");
        } else {
            document.body.classList.remove("overflow-hidden");
        }
    }

    filterToggle?.addEventListener("click", toggleFilters);

    closeFilters?.addEventListener("click", () => {
        // Force Close
        if (!filterContent) return;

        filterContent.classList.add("invisible", "opacity-0", "-translate-y-4");
        filterContent.classList.remove(
            "visible",
            "opacity-100",
            "translate-y-0",
        );

        document.body.classList.remove("overflow-hidden");
    });

    // Formatting currency
    const formatCurrency = (val: number) => val.toString();

    function updateSortSelects(value: string) {
        sortSelects.forEach((select: any) => {
            select.value = value;
        });
    }

    function sortItems(items: Element[]) {
        if (!currentSort.field) return items;

        return items.sort((a: any, b: any) => {
            const valA = parseFloat(a.dataset[currentSort.field!]);
            const valB = parseFloat(b.dataset[currentSort.field!]);

            if (currentSort.direction === "asc") {
                return valA - valB;
            } else {
                return valB - valA;
            }
        });
    }

    function updateBadge(count: number) {
        if (!filterBadge) return;
        if (count > 0) {
            filterBadge.textContent = count.toString();
            filterBadge.classList.remove("hidden");
        } else {
            filterBadge.classList.add("hidden");
        }
    }

    function filterItems() {
        // Collect Filter State
        const maxPrice = parseInt(priceRange.value);
        if (priceValue) priceValue.textContent = maxPrice.toString();

        const selectedWidths = Array.from(widthCheckboxes)
            .filter((cb: any) => cb.checked)
            .map((cb: any) => {
                const [min, max] = cb.value.split("-").map(Number);
                return { min, max };
            });

        const selectedCategories = Array.from(categoryCheckboxes)
            .filter((cb: any) => cb.checked)
            .map((cb: any) => cb.value);

        // Calculate active filters count
        let activeCount = 0;
        if (maxPrice < parseInt(priceRange.max)) activeCount++;
        activeCount += selectedWidths.length;
        activeCount += selectedCategories.length;
        updateBadge(activeCount);

        // Filter logic
        let visibleItems: HTMLElement[] = [];
        gridItems.forEach((item: any) => {
            const price = parseInt(item.dataset.price);
            const width = parseInt(item.dataset.width);
            const categories = JSON.parse(item.dataset.categories);

            const priceMatch = price <= maxPrice;

            let widthMatch = true;
            if (selectedWidths.length > 0) {
                widthMatch = selectedWidths.some(
                    (range) => width >= range.min && width <= range.max,
                );
            }

            let categoryMatch = true;
            if (selectedCategories.length > 0) {
                categoryMatch = selectedCategories.some((cat) =>
                    categories.includes(cat),
                );
            }

            if (priceMatch && widthMatch && categoryMatch) {
                visibleItems.push(item);
            } else {
                item.style.display = "none";
            }
        });

        // Sort items
        visibleItems = sortItems(visibleItems) as HTMLElement[];

        // Re-append items in sorted order
        const gridContainer = document.getElementById("moldingGrid");
        if (gridContainer) {
            visibleItems.forEach((item) => {
                item.style.display = "block";
                gridContainer.appendChild(item); // Moves item to new position
            });
        }

        // Update Count and No Results
        if (resultsCount)
            resultsCount.textContent = visibleItems.length.toString();

        if (noResults) {
            visibleItems.length === 0
                ? noResults.classList.remove("hidden")
                : noResults.classList.add("hidden");
        }
    }

    // Sort Change Handlers
    sortSelects.forEach((select) => {
        select.addEventListener("change", (e: any) => {
            const [field, direction] = e.target.value.split("-");
            currentSort = { field, direction };

            // Sync other selects
            updateSortSelects(e.target.value);

            // Rotate chevron logic could be added here if we want to indicate direction, but standard sort doesn't usually use chevron rotation.
            // The user asked for "same as filter button" which implies just the icon style.

            filterItems();
        });
    });

    // Initial Sort
    filterItems();

    // Attach listeners
    priceRange?.addEventListener("input", filterItems);
    widthCheckboxes.forEach((cb) => cb.addEventListener("change", filterItems));
    categoryCheckboxes.forEach((cb) =>
        cb.addEventListener("change", filterItems),
    );

    // Reset logic
    resetBtn?.addEventListener("click", () => {
        priceRange.value = priceRange.max;
        if (priceValue) priceValue.textContent = priceRange.max;

        widthCheckboxes.forEach((cb: any) => (cb.checked = false));
        categoryCheckboxes.forEach((cb: any) => (cb.checked = false));

        // Reset sort
        const defaultSort = "width-desc";
        const [field, direction] = defaultSort.split("-");
        currentSort = { field, direction };
        updateSortSelects(defaultSort);

        filterItems();
    });

    // Initial run not needed if server renders all visible, but good for sync state
</script>

