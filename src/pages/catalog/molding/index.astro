import catalogData from "../../../data/molding.json";

const moldings = Object.values(catalogData);

// Extract unique categories for filter
const allCategories = [
    ...new Set(moldings.flatMap((m) => m.category || [])),
].sort();

// Create width ranges
const widthRanges = [
    { label: "10-20 –º–º", min: 10, max: 20 },
    { label: "20-30 –º–º", min: 20, max: 30 },
    { label: "30-40 –º–º", min: 30, max: 40 },
    { label: "40-50 –º–º", min: 40, max: 50 },
    { label: "50-60 –º–º", min: 50, max: 60 },
    { label: "60-80 –º–º", min: 60, max: 80 },
    { label: "80-100 –º–º", min: 80, max: 100 },
    { label: "100+ –º–º", min: 100, max: 999 },
];

// Determine max price for slider
const maxPrice = Math.max(...moldings.map((m) => m.price || 0));
