---
import data from "../../data/catalog.json";
const models = Object.values(data);
---

<html lang="uk">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Каталог багетів</title>
	</head>
	<body class="bg-gray-100 p-8">
		<h1 class="text-3xl font-bold text-center mb-10">
			Наші моделі багетів
		</h1>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				models.map((model) => (
					<div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
						<img
							src={model.group_image}
							alt={model.model_name}
							class="w-full h-64 object-cover"
						/>
						<div class="p-4">
							<h2 class="text-xl font-bold text-gray-800">
								{model.model_name}
							</h2>
							<p class="text-gray-600">
								Ширина: {model.width} мм | Висота:{" "}
								{model.height} мм
							</p>
							<div class="mt-2 flex flex-wrap gap-2">
								{model.category.map((cat) => (
									<span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
										{cat}
									</span>
								))}
							</div>
							<p class="mt-4 font-bold text-lg text-green-700">
								Ціна: {model.price} грн
							</p>
							<a
								href={`/model/${model.model_name}`}
								class="mt-4 block text-center bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition"
							>
								Дивитися всі кольори ({model.variants.length})
							</a>
						</div>
					</div>
				))
			}
		</div>
	</body>
</html>
