---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<div
    class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 h-full flex flex-col justify-center text-center"
>
    <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
    <p class="text-gray-600 leading-relaxed">
        {description}
    </p>
</div>
