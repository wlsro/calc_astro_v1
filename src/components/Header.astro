<header class="bg-cards sticky top-0 z-50 shadow-md">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex-shrink-0">
            <img
                src="/logo.webp"
                alt="Art Millennium Logo"
                class="h-12 w-auto object-contain"
            />
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center gap-8">
            <a
                href="/"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Головна</a
            >
            <a
                href="/catalog/molding"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Каталог</a
            >
            <a
                href="/#about"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Про нас</a
            >
            <a
                href="/#services"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Послуги</a
            >
            <a
                href="/#contacts"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Контакти</a
            >
        </nav>

        <!-- Pagefind Search & Mobile Menu Button -->
        <div class="flex items-center gap-4">
            <div
                id="search-desktop"
                class="hidden md:block w-64 lg:w-80 transition-all"
            >
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden text-gray-800 focus:outline-none"
                aria-label="Toggle menu"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-gray-100 bg-white absolute top-full left-0 w-full shadow-lg"
    >
        <nav class="flex flex-col p-4 gap-4">
            <!-- Mobile Search -->
            <div id="search-mobile" class="w-full mb-2"></div>

            <a
                href="/"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Головна</a
            >
            <a
                href="/catalog/molding"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Каталог</a
            >
            <a
                href="/#about"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Про нас</a
            >
            <a
                href="/#services"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Послуги</a
            >
            <a
                href="/#contacts"
                class="text-main-text hover:text-accent font-medium transition-colors"
                >Контакти</a
            >
        </nav>
    </div>
</header>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline src="/pagefind/pagefind-ui.js"></script>

<script is:inline>
    // Initialize Pagefind
    window.addEventListener("DOMContentLoaded", () => {
        // Desktop Search
        new PagefindUI({
            element: "#search-desktop",
            showSubResults: true,
            showImages: false,
            translations: {
                placeholder: "Пошук...",
            },
        });

        // Mobile Search
        new PagefindUI({
            element: "#search-mobile",
            showSubResults: true,
            showImages: false,
            translations: {
                placeholder: "Пошук...",
            },
        });
    });

    // Mobile Menu Toggle
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });

        // Close menu when a link is clicked
        const menuLinks = menu.querySelectorAll("a");
        menuLinks.forEach((link) => {
            link.addEventListener("click", () => {
                menu.classList.add("hidden");
            });
        });
    }
</script>
