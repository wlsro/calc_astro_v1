---
interface Props {
    model_name: string;
    group_image: string;
    width: number;
    price: number;
    category: string[];
}

const { model_name, group_image, width, price, category } = Astro.props;
---

<a
    href={`/catalog/molding/${model_name}`}
    class="block bg-cards rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-main-borders group h-full"
>
    <div class="relative aspect-[4/3] overflow-hidden bg-main-bg">
        <img
            src={group_image}
            alt={`Багет ${model_name}`}
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            loading="lazy"
        />
    </div>

    <div class="p-4">
        <div class="flex justify-between items-start mb-1">
            <h3 class="text-lg font-bold text-main-text">Серія {model_name}</h3>
            <span class="text-accent font-bold whitespace-nowrap"
                >{price} грн/м</span
            >
        </div>

        <div
            class="flex items-center justify-between text-sm text-secondary-text mb-3"
        >
            <span
                >Ширина: <span class="text-main-text font-semibold"
                    >{width} мм</span
                ></span
            >
        </div>

        <div class="flex flex-wrap gap-1">
            {
                category
                    .slice(0, 2)
                    .map((cat) => (
                        <span class="text-[10px] bg-main-bg text-secondary-text px-2 py-0.5 rounded-full border border-main-borders">
                            {cat}
                        </span>
                    ))
            }
        </div>
    </div>
</a>
